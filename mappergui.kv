<MainScreen>:
    orientation: "vertical"
    padding: 10

    fileSelector: fileSelector
    scaleInput: scaleInput
    ratioInput: ratioInput
    multipleInput: multipleInput
    nameInput: nameInput
    progressBar: progressBar

    Label:
        size_hint_y: 0.1
        text: "Sélectionnez un fichier ci dessous :"

    FileChooserListView:
        id: fileSelector
        size_hint_y: 1

    Label:
        size_hint_y: 0.1
        text: "Paramétrez les options de génération :"

    GridLayout:
        size_hint_y: 0.3
        cols: 2

        Label:
            text: "Agrandissement du rendu :"

        TextInput:
            id: scaleInput
            multiline: False
            text: "1"
            input_filter: 'int'

        Label:
            text: "Ratio de l'image :"

        TextInput:
            id: ratioInput
            multiline: False
            text: "1"
            input_filter: 'float'

        Label:
            text: "Dimensions multiples de :"

        TextInput:
            id: multipleInput
            multiline: False
            text: "8"
            input_filter: 'int'

        Label:
            text: "Nom du rendu :"

        TextInput:
            id: nameInput
            multiline: False
            text: ""
            hint_text: "Vierge: nom d'entrée"

    ProgressBar:
        id: progressBar
        size_hint_y: (0.1)
        max: 100

    Button:
        size_hint: (0.5, 0.1)
        text: "LANCER LA GÉNÉRATION"
        font_size: 16
        pos_hint: {'right':0.75}
        on_press: root.generate()
